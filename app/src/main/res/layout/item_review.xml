<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/review"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/reviewerProfilePic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintEnd_toStartOf="@+id/reviewerName"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="9dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/reviewerName"
        android:layout_width="477dp"
        android:layout_height="58dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="99dp"
        android:text="Reviewer Name"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="38sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reviewerProfilePic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reviewRating"
        android:layout_width="180dp"
        android:layout_height="37dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="11dp"
        android:text="Rating: 9.1/10"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/reviewText"
        app:layout_constraintTop_toBottomOf="@+id/reviewerProfilePic"
        tools:layout_editor_absoluteX="11dp" />

    <TextView
        android:id="@+id/reviewText"
        android:layout_width="619dp"
        android:layout_height="170dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="28dp"
        android:text="Lorem Ipsum"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>